---
import * as Icons from "../icons/index.ts";

interface Props {
  name: keyof typeof Icons;
  size?: number | string;
  color?: string;
  class?: string;
}

const {
  name,
  size = 40,
  color = "currentColor",
  class: cls = "",
} = Astro.props as Props;

const IconMarkup = (Icons as any)[name] as string | undefined;
const sizeValue = typeof size === "number" ? `${size}px` : String(size);
---
{IconMarkup ? (
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width={sizeValue}
    height={sizeValue}
    viewBox="0 0 24 24"
    fill="none"
    stroke={color}              
    stroke-width="1.5"
    stroke-linecap="round"
    stroke-linejoin="round"
    class={cls}
    aria-hidden="true"
  >
    <g set:html={IconMarkup} />
  </svg>
) : null}