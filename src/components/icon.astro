---
import * as Icons from "../icons";

interface Props {
  name: keyof typeof Icons;
  size?: number | string;
  class?: string;
}

const { name, size = 40, class: cls = "" } = Astro.props;
const IconMarkup = Icons[name];
const sizeValue = typeof size === "number" ? `${size}px` : size;
---

{IconMarkup && (
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width={sizeValue}
    height={sizeValue}
    viewBox="0 0 24 24"
    fill="currentColor"
    class={cls}
    aria-hidden="true"
  >
    <g set:html={IconMarkup} />
  </svg>
)}
