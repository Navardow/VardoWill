---
import ThemeToggle from "./themetoggle.astro";
import Nav from "./nav.astro";
---

<header class="app-header" id="app-header">
    <nav
        class="mx-auto max-w-screen-xl flex items-center justify-between pl-4 md:pr-2"
    >
        <div class="ham-menu md:hidden" id="ham-btn">
            <span></span>
            <span></span>
            <span></span>
        </div>

        <a href="/" class="flex items-center logo-wrap" id="logo-wrapper">
            <div class="logo-icon">
                <img
                    id="dark-logo"
                    src="/assets/icon8vblack.png"
                    alt="Logo"
                    class="h-16 w-auto hidden"
                />
                <img
                    id="light-logo"
                    src="/assets/icon8vwhite.png"
                    alt="Logo"
                    class="h-16 w-auto"
                />
            </div>
            <div class="-ml-2 text-xl sm:text-2xl">ardo</div>
        </a>

        <div
            class="mobile-nav-wrapper"
            id="mobile-nav-wrapper"
        >
            <div class="mobile-nav">
                <Nav />
            </div>
        </div>

        <ThemeToggle />
    </nav>
</header>
